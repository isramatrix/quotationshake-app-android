<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.DashboardActivity">

    <Button
        android:id="@+id/get_quotations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:onClick="onClick"
        android:text="@string/get_quotations"
        android:textColor="@color/dashboard_button_style" />

    <Button
        android:id="@+id/favourite_quotations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:onClick="onClick"
        android:text="@string/favourite_quotations"
        android:textColor="@color/dashboard_button_style" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:onClick="onClick"
        android:text="@string/settings"
        android:textColor="@color/dashboard_button_style" />

    <Button
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:onClick="onClick"
        android:text="@string/about"
        android:textColor="@color/dashboard_button_style" />
</LinearLayout>